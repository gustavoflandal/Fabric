# Database
DATABASE_URL="mysql://fabric:fabric123@localhost:3306/fabric"

# JWT (IMPORTANTE: Gere secrets aleatórios com mínimo 32 caracteres)
# Exemplo para gerar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Audit Logs Configuration
# Tipos de logs a capturar: all, write_only, errors_only, none
AUDIT_LOG_MODE=write_only
# Se true, loga também operações GET
AUDIT_LOG_INCLUDE_READS=false
